#!/bin/bash
#
# build - simple command line build script
#

cd ~/workspace/MMOCoreORB
export CLASSPATH=/home/scurby/workspace/Core3/MMOEngine/bin/idlc.jar

EXTRA=$1

# Just in case they've not ran config yet
# TODO add check to see if config.log has changed
if [ ! -f build/unix/config.log ]; then
  EXTRA='config'
fi

case $EXTRA in
  config ) make config; make clean ;;
  clean ) make clean ;;
esac

# Always run build
if make -k build; then
  echo "** BUILD SUCCESS IN $SECONDS SECOND(S) **"
  exit 0
fi

# opps.
echo "** BUILD FAILED **"
exit 1
